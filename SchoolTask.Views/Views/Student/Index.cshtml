@using SchoolTaskModels.Dtos
@model IEnumerable<StudentDto>
@{
    ViewData["Title"] = "Index";
}

@if (TempData["info"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.info('@TempData["info"]');
    </script>
}

<div class="container p-3">
    <div class="row">
        <div class="col-6" style="padding-left: 300px">
            <h2 class="text-primary">Student List</h2>
        </div>
        <div class="col-6" style="padding-left: 100px">
            <a asp-controller="School" asp-action="index" disabled class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Back to School List
            </a>
        </div>
    </div>
    <br />
    <br />

    <table class="table table-bordered table-striped" style="width:60%; margin-right:auto; margin-left:auto">

        <thead>

            <tr>
                <th>
                    Name
                </th>
                <th>
                    Surname
                </th>
                <th>
                    Student Index
                </th>

            </tr>

        </thead>

        <tbody>

            @foreach (var student in Model)
            {
                <tr>
                    <td>
                        @student.Name
                    </td>
                    <td>
                        @student.Surname
                    </td>
                    <td>
                        @student.StudentIndex
                    </td>

                </tr>
            }

        </tbody>

    </table>
</div>
