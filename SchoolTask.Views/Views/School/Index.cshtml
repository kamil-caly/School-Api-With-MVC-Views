@using SchoolTaskModels.Dtos
@model IEnumerable<SchoolDto>
@{
    ViewData["Title"] = "Index";
}

@if(TempData["info"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.info('@TempData["info"]');
    </script>
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">School List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="School" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New School
            </a>
        </div>
    </div>
    <br />
    <br />

    <table class="table table-bordered table-striped" style="width:100%">

        <thead>

            <tr>
                <th>
                    FullName
                </th>
                <th>
                    City
                </th>
                <th>
                    Street
                </th>
                <th>
                    Number
                </th>
                <th>
                    SchoolType
                </th>
                <th></th>

            </tr>

        </thead>

        <tbody>

            @foreach (var school in Model)
            {
                <tr>
                    <td>
                        @school.FullName
                    </td>
                    <td>
                        @school.City
                    </td>
                    <td>
                        @school.Street
                    </td>
                    <td>
                        @school.Number
                    </td>
                    <td>
                        @school.SchoolType
                    </td>

                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="School" asp-action="Edit" asp-route-id="@school.Id" class="btn btn-primary mx-2"> 
                                <i class="bi bi-pencil-square"></i> Edit 
                            </a>

                            <a asp-controller="School" asp-action="Delete" asp-route-id="@school.Id" class="btn btn-danger mx-2"> 
                                <i class="bi bi-trash-fill"></i> Delete 
                            </a>

                            <a asp-controller="Student" asp-action="Index" asp-route-schoolId="@school.Id" class="btn btn-secondary mx-2"> 
                                <i class="bi bi-trash-fill"></i> Student 
                            </a>
                        </div>
                    </td>

                    @*@foreach (var student in school.Students)
                    {
                        <td>
                            <div>@student.Name | @student.Surname | @student.StudentIndex</div>
                        </td>
                    }*@

                </tr>
            }

        </tbody>

    </table>
</div>

