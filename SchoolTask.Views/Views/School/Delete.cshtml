@using SchoolTaskModels.Dtos
@model SchoolDto

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete School</h2>
            <hr />
        </div> 
         
        <div class="mb-3">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="City"></label>
            <input asp-for="City" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Street"></label>
            <input asp-for="Street" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Number"></label>
            <input asp-for="Number" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="SchoolType"></label>
            <input asp-for="SchoolType" disabled class="form-control" />
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="School" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}